@{
    ViewBag.Title = "Index";
}
@(Html.Kendo().TabStrip()
              .Name("tabstrip")
              .Items(tabstrip =>
              {
                  tabstrip.Add().Text("Books")
                      .Selected(true)
                      .LoadContentFrom(Url.Action("Grid", "Book", new { area = "KendoAngular" }));

                  tabstrip.Add().Text("Authors")
                      .LoadContentFrom(Url.Action("Grid", "Author", new { area = "KendoAngular" }));
              })
)